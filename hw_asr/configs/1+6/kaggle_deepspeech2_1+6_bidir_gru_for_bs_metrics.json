{
  "name": "kaggle_deepspeech2_1+6",
  "n_gpu": 1,
  "preprocessing": {
      "sr": 16000,
      "spectrogram": {
          "type": "MelSpectrogram",
          "args": {}
      },
      "log_spec": true
  },
  "augmentations": {
      "wave": [],
      "spectrogram": []
  },
  "arch": {
      "type": "DeepSpeech2",
      "args": {
          "n_feats": 128,
          "cnn_config": {
              "output_channels": [
                  16
              ],
              "filters": [
                  [
                      41,
                      11
                  ]
              ]
          },
          "gru_config": {
              "hidden_dims": [
                  512,
                  512,
                  512,
                  512,
                  512,
                  512
              ],
              "bidirectional": true
          }
      }
  },
  "data": {
      "train": {
          "batch_size": 20,
          "num_workers": 0,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "train-clean-100",
                      "max_audio_length": 15.0,
                      "max_text_length": 200,
                      "data_dir": "/kaggle/input/librispeech-clean/LibriSpeech",
                      "index_dir": "/kaggle/working/indices"
                  }
              }
          ]
      },
      "val": {
          "batch_size": 20,
          "num_workers": 0,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "test-clean",
                      "data_dir": "/kaggle/input/librispeech-clean/LibriSpeech",
                      "index_dir": "/kaggle/working/indices"
                  }
              }
          ]
      }
  },
  "optimizer": {
      "type": "Adam",
      "args": {
          "lr": 0.0006
      }
  },
  "loss": {
      "type": "CTCLoss",
      "args": {}
  },
  "metrics": [
      {
          "type": "ArgmaxWERMetric",
          "args": {
              "name": "WER (argmax)"
          }
      },
      {
          "type": "BeamSearchWERMetric",
          "args": {
              "name": "WER (beam search, beam_size=10)",
              "beam_size": 10
          }
      },
      {
          "type": "ArgmaxCERMetric",
          "args": {
              "name": "CER (argmax)"
          }
      },
      {
        "type": "BeamSearchCERMetric",
        "args": {
            "name": "CER (beam search, beam_size=10)",
            "beam_size": 10
        }
    }
  ],
  "lr_scheduler": {
      "type": "StepLR",
      "args": {
          "step_size": 1000,
          "gamma": 0.8
      }
  },
  "trainer": {
      "epochs": 200,
      "log_step": 10,
      "save_dir": "saved/",
      "save_period": 1,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 100,
      "visualize": "wandb",
      "wandb_project": "asr_project",
      "wandb_run": "kaggle_deepspeech2_1+6_bidir_gru_bs_metrics",
      "len_epoch": 100,
      "grad_norm_clip": 400,
      "beam_size": 10
  }
}